-class(Main).
-import([Nodo]).
-export([main/1]).

class methods.

-define(RING, 12).

start(Token) ->
	H = lists:foldl(fun(Id,Pid)-> Nodo::new(Id, Pid) end, 
      				self(), 
      				lists:seq(?RING, 2, -1)
				),
	io:fwrite("inicio: ~p ~p ~n", [H,Token]),
	H ! Token,
	io:format("Definido processo ~p com parÃ¢metros ~p ~p~n", [self(), 1, H]),
	Nodo::new(1, H, self).

main(Token) ->
	io:format("~w~n", [self()]),
	start(Token).
