-class(cor).
-constructor([constructor/3]).
-export([get_b/0, get_g/0, get_r/0, set_b/1, set_g/1, set_r/1]).

class_attributes.

R
G
B

class_methods.

constructor(R, G, B) ->
	self::R = R,
	self::G = G,
	self::B = B.

get_r() ->
	self::R.

get_g() ->
	self::G.

get_b() ->
	self::B.

set_r(R) ->
	self::R = R + somar_r(100).

set_g(G) ->
	self::G = G.

set_b(B) ->
	self::B = B.

somar(Value) ->
	self::R + Value.
