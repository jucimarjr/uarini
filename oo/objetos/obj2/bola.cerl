-class(principal).
-export([constructor/0, get_cor/1, get_circun/1,  get_material/1]).

class attributes.

string	cor;
float	circunferencia;
string	material;

class methods.

constructor(string Cor, float Circun, string Material) ->
	this.cor			= Cor,
	this.circunferencia = Circunferencia,
	this.material		= Material.

get_cor() ->
	this.cor.

get_circun() ->
	this.circunferencia.

get_material() ->
	this.material.
