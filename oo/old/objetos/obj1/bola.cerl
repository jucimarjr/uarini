-class(principal).
-export([constructor/0, get_cor/1, get_circun/1,  get_material/1]).

class attributes.

cor
circunferencia
material

class methods.

constructor() ->
	cor = Cor,
	circunferencia = Circunferencia,
	material = Material.

get_cor(Key) ->
	get({bola, cor, Key}).

get_circun(Key) ->
	get({bola, circunferencia, Key}).

get_material(Key) ->
	get({bola, material, Key}).
