-class(pessoa).
-constructor([constructor/2]).
-export([gastar/1, receber/1]).

class_attributes.

Nome;
Nascimento;
DinheiroNaCarteira.

class_methods.

constructor(Nome, Nasc) ->  
    self::Nome = Nome,
    self::Nascimento = Nasc.
    
gastar(Valor) -> 
    self::DinheiroNaCarteira = self::DinheiroNaCarteira - Valor.
    
receber(Valor) ->  
    self::DinheiroNaCarteira = self::dinheiroNaCarteira + Valor.
