-class(proc).
-export([new/1,send/1]).
-constructor([new/1]).
-static([loop/1, send/1]).

class_attributes.

Pid.

class_methods.

new(RightProc) ->
	self::Pid = spawn( fun() -> loop(RightProc) end ).

loop(RightProc) ->
	receive
	Data ->
	    RightProc ! Data,
	    loop(RightProc)
    end.

send(Msg) ->
	self::Pid ! Msg.