-class(proc).
-export([new/1,send/1]).
-constructor([new/1]).

attributes.

Pid.

methods.

new(RightProc) ->
	self::Pid = spawn( fun() -> loop(RightProc) end ).

get_pid() -> Pid.

loop(RightProc) ->
	receive
	Data ->
	    RightProc ! Data,
	    loop(RightProc)
    end.

send(Msg) ->
	self::Pid ! Msg.
