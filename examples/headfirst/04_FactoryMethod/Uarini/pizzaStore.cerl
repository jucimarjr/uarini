-class(pizzaStore).
-export([create_pizza/1, order_pizza/1]).

methods.

create_pizza(Item) -> null.

order_pizza(Type) ->
	Pizza = pizza::new_(),
	Pizza::create_pizza(Type),
	io:format("--- Making a ~p --- ~n", [Pizza::get_name()]),
	Pizza::prepare(),
	Pizza::bake(),
	Pizza::cut(),
	Pizza::box(),
	Pizza.