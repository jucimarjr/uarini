-class(theaterLights).
-export([new/1, on/0, off/0, dim/1, to_string/0]).
-constructor([new/1]).

attributes.

Description.

methods.

new(Description) ->
	self::Description = Description.
	
on() ->
	io:format("~p on~n", [self::Description]).

off() ->
	io:format("~p off~n", [self::Description]).

dim(Level) ->
	io:format("~p dimming to ~p%~n", [self::Description, Level]).	

to_string() ->
	self::Description.