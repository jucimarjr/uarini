-class(polimorfismo).
-export([main/0]).
-static([main/0]).

class_methods.

imprimir_imposto(IPVA) ->
	io:format("Ipva do caminhao: ~p~n", [IPVA::calcularIpva()]),

main() ->
	Caminhao = caminhao::constructor(1995, "JXT - 1234"),
	Carro = carro::constructor(2008, "MNO - 4321").
	imprimir_imposto(Caminhao),
	imprimir_imposto(Carro).