-class(contas).
-static([mostrarCalculo/3, main/0]).
-export([mostrarCalculo/3, main/0]).

class_methods.

mostrarCalculo(OperacaoMatematica, X, Y) ->
	io:format("O resultado eh: ~p~n", [OperacaoMatematica::calcular(X,Y)]).
	
main() ->
	contas::mostrarCalculo(OperacaoMatematica = soma::constructor(), 5, 2),
	contas::mostrarCalculo(OperacaoMatematica = subtracao::constructor(), 5, 2).
	