-class(horista).
-export([get_salario/0, calcular/0, main/0]).
-extends(empregado).
-static([main/0]).

class_methods.

get_salario() ->
    -2.

calcular() ->
    %%io:format("Salario da superclasse: ~n", [] ).
	
	io:format("Salario da superclasse: ~p ", [self::get_salario()] ),
    io:format("Salario da subclasse: ~p", [super::get_salario()] ).

main() ->
    H = empregado::new(),
    H::calcular().
