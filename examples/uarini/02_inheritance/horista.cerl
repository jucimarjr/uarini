-class(horista).
-extends(empregado).
-export([get_salario/0, main/0,calcular/0]).
-constructor([new/0]).
-static([main/0]).

class_methods.

new() -> ok.

get_salario() ->
    -2.

calcular() ->
	super::calcular(),
    io:format("Salario da classe:~p ~n", [ self::get_salario() ] ).

main() ->
    H = horista::new(),
	H::get_salario(),
	H::calcular().
