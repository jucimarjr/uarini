-class(polimorfismo).
-static([main/0]).

class_methods.

main() ->
    H = horista::constructor(),
    M = mensalista::constructor(),

    H::setSalario( 2240.00 ),
    M::setSalario( 2240.00 ),

    io:format( "Salario em horas: ~p", [H::getSalario()]),
    io:format( "Salario em horas: ~p", [M::getSalario()]).
